page {
  background-color: #f0f2f5;
  color: #0f172a;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', sans-serif;
  line-height: 1.6;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.hero {
  background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.15);
}

.hero__header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.hero__title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
  line-height: 1.2;
}

.hero__subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.language-switcher {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 20rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 20rpx;
  border: 1px solid rgba(255, 255, 255, 0.2);
  flex-shrink: 0;
  backdrop-filter: blur(10rpx);
}

.language-switcher__icon {
  font-size: 28rpx;
  line-height: 1;
}

.language-switcher__text {
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  line-height: 1;
}

.section-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 32rpx;
}

.section-card__title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.about-section .paragraph {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.8;
  margin-bottom: 24rpx;
}

.about-section .paragraph:last-child {
  margin-bottom: 0;
}
