page {
  background-color: #f5f7fb;
  color: #0f172a;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', sans-serif;
  line-height: 1.5;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.hero {
  background: linear-gradient(135deg, #0ea5e9, #2563eb);
  color: #fff;
  padding: 40rpx;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.15);
}

.hero__title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.hero__subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.section-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 16rpx 44rpx rgba(15, 23, 42, 0.08);
}

.section-card__title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.about-section .paragraph {
  margin-bottom: 24rpx;
  color: #475569;
}

.list {
  list-style: none;
  padding-left: 0;
  margin: 0;
}

.list__item {
  padding-left: 28rpx;
  position: relative;
  margin-bottom: 24rpx;
  color: #475569;
}

.list__item::before {
  content: '\2022';
  position: absolute;
  left: 0;
  color: #2563eb;
}
