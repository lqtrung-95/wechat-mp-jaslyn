page {
  background-color: #f0f2f5;
  color: #0f172a;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', sans-serif;
  line-height: 1.6;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.language-toggle {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.language-toggle__btn {
  border: none;
  background: rgba(15, 23, 42, 0.08);
  color: #0f172a;
  padding: 12rpx 32rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
}

.hero {
  background: linear-gradient(135deg, #1e3a5f 0%, #2563eb 100%);
  border-radius: 32rpx;
  padding: 48rpx 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.15);
}

.hero__title {
  font-size: 40rpx;
  font-weight: 700;
  color: #fff;
  margin-bottom: 16rpx;
}

.hero__subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  line-height: 1.6;
}

.section-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 50rpx rgba(15, 23, 42, 0.08);
  margin-bottom: 32rpx;
}

.section-card__title {
  font-size: 32rpx;
  font-weight: 700;
  color: #0f172a;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f1f5f9;
}

.instruction-block {
  margin-bottom: 32rpx;
}

.instruction-block:last-child {
  margin-bottom: 0;
}

.instruction-block__heading {
  font-size: 30rpx;
  font-weight: 600;
  color: #1e3a5f;
  margin-bottom: 16rpx;
}

.instruction-block__body {
  font-size: 28rpx;
  color: #475569;
  line-height: 1.7;
}
