<view class="page">
  <view class="language-toggle">
    <button class="language-toggle__btn" bindtap="toggleLanguage">{{language === 'zh' ? 'EN' : '中文'}}</button>
  </view>

  <view class="hero">
    <view class="hero__title">{{language === 'zh' ? '使用指南' : 'How to use'}}</view>
    <view class="hero__subtitle">{{language === 'zh' ? '快速了解如何提交需求并跟进订单。' : 'Everything you need to know before submitting a request.'}}</view>
  </view>

  <view class="section-card">
    <view class="section-card__title">{{copy.title}}</view>
    <view wx:for="{{copy.sections}}" wx:key="heading" class="instruction-block">
      <view class="instruction-block__heading">{{item.heading}}</view>
      <view class="instruction-block__body">{{item.body}}</view>
    </view>
  </view>
</view>
