page {
  background-color: #f5f7fb;
  color: #0f172a;
  font-size: 28rpx;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', sans-serif;
  line-height: 1.5;
}

.page {
  min-height: 100vh;
  padding: 32rpx;
  box-sizing: border-box;
}

.hero {
  background: linear-gradient(135deg, #0ea5e9, #2563eb);
  color: #fff;
  padding: 40rpx;
  border-radius: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 23, 42, 0.15);
}

.hero__title {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.hero__subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner {
  padding: 28rpx;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  font-size: 26rpx;
}

.banner-info {
  background-color: #e0f2fe;
  color: #0f172a;
}

.banner-warning {
  background-color: #fef3c7;
  color: #92400e;
}

.banner-error {
  background-color: #fee2e2;
  color: #991b1b;
}

.banner-success {
  background-color: #dcfce7;
  color: #166534;
}

.section-card {
  background: #fff;
  border-radius: 32rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 30rpx rgba(15, 23, 42, 0.08);
}

.section-card__title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.section-card__subtitle {
  font-size: 26rpx;
  color: #475569;
  margin-bottom: 24rpx;
}

.field {
  margin-bottom: 28rpx;
}

.field__label {
  font-size: 26rpx;
  color: #475569;
  margin-bottom: 12rpx;
  display: block;
}

.field__control,
.field__textarea,
.picker__trigger {
  width: 100%;
  border: 2rpx solid #e2e8f0;
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  background-color: #f8fafc;
  box-sizing: border-box;
}

.field__control:focus,
.field__textarea:focus {
  border-color: #2563eb;
}

.field__textarea {
  min-height: 160rpx;
}

.picker__trigger {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #0f172a;
}

.picker__trigger--disabled {
  color: #94a3b8;
}

.actions {
  display: flex;
  flex-direction: column;
  margin-bottom: 40rpx;
}

.actions button + button {
  margin-top: 20rpx;
}

button.primary-btn {
  background-color: #0f172a;
  color: #fff;
  border-radius: 999rpx;
  border: none;
  font-size: 28rpx;
  padding: 28rpx;
}

button.primary-btn[disabled] {
  background-color: #cbd5f5;
  color: rgba(255, 255, 255, 0.75);
}

button.secondary-btn {
  background-color: #e2e8f0;
  color: #0f172a;
  border-radius: 999rpx;
  border: none;
  font-size: 28rpx;
  padding: 28rpx;
}

.form-hint {
  font-size: 24rpx;
  color: #94a3b8;
}

.status-text {
  font-size: 26rpx;
  color: #475569;
}

.list {
  list-style: none;
  padding-left: 0;
  margin: 0;
}

.list__item {
  padding-left: 28rpx;
  position: relative;
  margin-bottom: 24rpx;
  color: #475569;
}

.list__item::before {
  content: '\2022';
  position: absolute;
  left: 0;
  color: #2563eb;
}

.about-section .paragraph {
  margin-bottom: 24rpx;
  color: #475569;
}

.supported-banner__title {
  font-weight: 600;
}
